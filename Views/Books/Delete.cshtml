@model Biblioteca.Models.Book

<h1>Delete Book</h1>

<div>
    <h4>Are you Sure you want to delete this? </h4>
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Author
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>
        <dt class="col-sm-2">
            Published Date
        </dt>
        <dd class="col-sm-10">
            @Model.PublisDate.ToShortDateString()
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Delete">
        <input asp-for="Id" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-primary" />
    </form>
    <a asp-action="Index">Back to list</a>
</div>