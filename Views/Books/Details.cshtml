@model Biblioteca.Models.Book

<h1>Book Details</h1>

<div>
    <h4>Book</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dl class="col-sm-2">
            Author
        </dl>
        <dd class="col-sm-10">
            @Model.Author
        </dd>
        <dl class="col-sm-2">
            Genre
        </dl>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>
        <dt class="col-sm-2">
            Published Date
        </dt>
        <dd class="col-sm-10">
            @Model.PublisDate.ToShortDateString()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id ="@Model.Id">Edit</a>
    <a asp-action="Index">Back to list</a>
</div>