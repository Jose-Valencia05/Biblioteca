@model IEnumerable<Biblioteca.Models.Book>

<h1>Books</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
       <tr>
           <th>Title</th>
           <th>Author</th>
           <th>Genre</th>
           <th>Published Date</th>
           <th></th>
       </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.Title </td>
                <td>@book.Author </td>
                <td>@book.Genre </td>
                <td>@book.PublisDate.ToShortDateString() </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id">Edit</a> | 
                    <a asp-action="Details" asp-route-id="@book.Id">Details</a> | 
                    <a asp-action="Delete" asp-route-id="@book.Id">Delete</a> 
                </td>
            </tr>
        }
    </tbody>
</table>